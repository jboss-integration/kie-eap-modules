<module xmlns="urn:jboss:module:1.0" name="org.kie.spring">
    <resources>
        <resource-root path="kie-spring-${version.org.kie}.jar"/>
        <!--resource-root path="drools-osgi-integration-6.4.0-SNAPSHOT.jar"/-->
    </resources>
    <dependencies>
        <module name="javax.api"/>
        <module name="org.kie"/>
       <module name="org.apache.commons.logging" />
       <module name="org.drools" export="true"/>
        <module name="org.apache.poi"/>
        <module name="org.jbpm">
        </module>
        <module name="org.slf4j" />
        <module name="org.springframework.tx" slot="3.0"/>
        <module name="org.springframework.beans" slot="3.0"/>
        <module name="org.springframework.context" slot="3.0"/>
        <module name="org.springframework.core" slot="3.0"/>
        <module name="com.sun.xml.bind"/>
        <module name="com.thoughtworks.xstream">
           <exports>
              <exclude path="org/springframework/**" />
           </exports>
	</module>
    </dependencies>
  <exports>
    <exclude path="org/springframework/**" />
  </exports>
</module>
